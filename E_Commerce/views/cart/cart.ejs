<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container py-5">
    <h3 class="mb-5 text-center fw-bold text-primary">
        <i class="fas fa-shopping-cart me-2"></i>Your Cart
    </h3>

    <% if(user.cart.length > 0) { 
        let total = 0;
        user.cart.forEach(product => { total += product.price; });
    %>
    <div class="card-list">
        <% user.cart.forEach(product => { %>
        <div class="card mb-4 shadow-sm border-0 rounded-4 cart-item-card">
            <div class="row g-0 align-items-center">
                <div class="col-4 col-md-3">
                    <img src="<%= product.img %>" class="cart-item-img rounded-start-4" alt="<%= product.name %>">
                </div>
                <div class="col-8 col-md-9">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold text-truncate mb-1"><%= product.name %></h5>
                        <p class="card-text text-muted small mb-2"><%= product.desc ? product.desc.substring(0, 60) : '' %>...</p>
                        <span class="fw-bold fs-5 text-success mb-3">₹<%= product.price %></span>
                        
                        <div class="d-flex justify-content-end gap-2 mt-auto">
                            <a href="/products/<%= product._id %>" class="btn btn-sm btn-outline-primary rounded-pill flex-grow-1">
                                <i class="fas fa-eye me-1"></i>View
                            </a>
                            <form action="/user/<%= product._id %>/remove?_method=DELETE" method="post" class="d-inline flex-grow-1">
                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill w-100">
                                    <i class="fas fa-trash me-1"></i>Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <div class="card shadow border-0 rounded-4 mt-5 checkout-card">
        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center p-4">
            <h4 class="mb-3 mb-md-0">Total: 
                <span class="fw-bold text-success">₹<%= total %></span>
            </h4>
            <a href="/checkout" class="btn btn-lg btn-success rounded-pill shadow-sm px-4">
                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
            </a>
        </div>
    </div>

    <% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-box-open fa-4x text-secondary mb-3"></i>
        <p class="text-muted fs-5 mb-3">Your cart is empty.</p>
        <a href="/products" class="btn btn-lg btn-primary rounded-pill shadow-sm px-4">
            <i class="fas fa-shopping-bag me-2"></i>Start Shopping
        </a>
    </div>
    <% } %>
</div>

<%- include('../partials/footer')%>

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Poppins', sans-serif;
    }

    .cart-item-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .cart-item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1) !important;
    }

    .cart-item-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .checkout-card {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
    }
</style>