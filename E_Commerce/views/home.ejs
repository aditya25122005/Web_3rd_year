<% layout('layouts/boilerplate') %>

<header class="masthead d-flex align-items-center justify-content-center text-center">
    <div class="container hero-content">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="text-uppercase text-white display-4 fw-bold animated-h1">
                    Your One-Stop Shop
                </h1>
                <hr class="divider bg-warning my-4 animated-divider" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <p class="text-white-75 mb-5 animated-p">
                    Explore high-quality products from top sellers. Shop with confidence.
                </p>
                <div class="d-flex justify-content-center gap-3 animated-buttons">
                    <a class="btn btn-warning btn-lg rounded-pill px-5 fw-bold" href="/login">
                        Log In
                    </a>
                    <a class="btn btn-outline-light btn-lg rounded-pill px-5 fw-bold" href="/register">
                        Sign Up
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
    }

    .masthead {
        position: relative;
        width: 100%;
        height: 100vh;
        background: url('https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjF8fHNob3BwaW5nfGVufDB8fDB8fHww') no-repeat center center;
        background-size: cover;
        background-attachment: fixed; /* Optional: for parallax scrolling effect */
    }

    .masthead::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6); /* Darker overlay for better text readability */
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2; /* Ensures content is above the overlay */
        padding: 2rem;
    }

    .masthead h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        text-shadow: 2px 2px 8px rgba(8, 169, 169, 0.9); /* Darker shadow for more contrast */
    }

    .masthead p {
        color:yellow;
        font-size: clamp(1rem, 2vw, 1.25rem);
        text-shadow: 1px 1px 4px rgba(173, 6, 6, 0.7);
    }

    .divider {
        width: 5rem;
        height: 0.2rem;
        opacity: 0.8;
    }

    .btn-lg {
        font-size: 1.1rem;
        transition: transform 0.3s ease;
    }

    .btn-lg:hover {
        transform: translateY(-3px);
    }
    
    /* Animations */
    .animated-h1 {
        animation: fadeInDown 1s ease-out;
    }
    .animated-divider {
        animation: fadeIn 1.5s ease-out;
    }
    .animated-p {
        animation: fadeInUp 1.5s ease-out;
    }
    .animated-buttons {
        animation: fadeIn 2s ease-out;
    }

    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-50px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(50px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>