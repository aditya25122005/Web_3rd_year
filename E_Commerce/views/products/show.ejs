<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="row g-0">
                    <!-- Product Image Section -->
                    <div class="col-md-5 d-flex align-items-center justify-content-center p-3" style="background-color: #f0f2f5;">
                        <img src="<%= foundProduct.img %>" 
                             class="img-fluid rounded-start" 
                             alt="<%= foundProduct.name %>" 
                             style="max-height: 400px; object-fit: contain;">
                    </div>
                    <!-- Product Details and Buttons Section -->
                    <div class="col-md-7 d-flex flex-column">
                        <div class="card-body p-4 flex-grow-1">
                            <h1 class="card-title fw-bold mb-1"><%= foundProduct.name %></h1>
                            <h4 class="text-success fw-bold mb-3">â‚¹<%= foundProduct.price %></h4>
                            <p class="card-text text-muted"><%= foundProduct.desc %></p>
                        </div>
                        <div class="card-footer bg-white border-0 p-3">
                            <div class="d-flex justify-content-between align-items-center gap-2">

                                <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-outline-secondary w-100 fw-bold btn-sm">
                                    <i class="fas fa-shopping-bag me-2"></i>Edit
                                </a>
                                <a href="#" class="btn btn-warning w-100 fw-bold btn-sm">
                                    <i class="fas fa-shopping-bag me-2"></i>Buy Now
                                </a>
                                <a href="#" class="btn btn-secondary w-100 fw-bold btn-sm">
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Review Section -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2 class="display-6 fw-bold text-muted">Leave a review</h2>
        </div>
    </div>
</div>
</body>
</html>