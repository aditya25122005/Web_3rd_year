<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3 mb-4">
                <div class="row g-0">
                    <!-- Displaying flash -->
            <%- include('../partials/flash') %>    
<!-- <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
  <% if (msg && msg.length) { %>
    <strong><%= msg %></strong>
  <% } %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div> -->
        

                    <div class="col-md-5 d-flex align-items-center justify-content-center p-3" style="background-color: #f0f2f5;">
                        <img src="<%= foundProduct.img %>" 
                             class="img-fluid rounded-start" 
                             alt="<%= foundProduct.name %>" 
                             style="max-height: 400px; object-fit: contain;">
                    </div>
                    <div class="col-md-7 d-flex flex-column">
                        <div class="card-body p-4 flex-grow-1">
                            <h1 class="card-title fw-bold mb-1"><%= foundProduct.name %></h1>
                            <h4 class="text-success fw-bold mb-3">₹<%= foundProduct.price %></h4>
                            <p class="card-text text-muted"><%= foundProduct.desc %></p>
                        </div>
                        <div class="card-footer bg-white border-0 p-3">
                            <div class="d-flex justify-content-between align-items-center gap-2">
                                <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-outline-secondary w-100 fw-bold btn-sm">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                                <a href="#" class="btn btn-warning w-100 fw-bold btn-sm">
                                    <i class="fas fa-shopping-bag me-2"></i>Buy Now
                                </a>
                                <a href="#" class="btn btn-secondary w-100 fw-bold btn-sm">
                                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card p-4 shadow-lg border-0 rounded-3">
                <h4 class="fw-bold text-center mb-3">Leave a review</h4>
                <form action="/products/<%=foundProduct._id%>/review" method="POST">
                    <div class="mb-3">
                       <fieldset class="starability-basic">

  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>


                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="comment">Comment:</label>
                        <textarea class="form-control" rows="3" name="comment" id="comment"></textarea>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-success btn-lg">Add Review</button>
                    </div>
                </form>


<div class="my-3">
    <% for(let review of foundProduct.reviews){ %>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= review.author %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    Rating:
                    <% for(let i = 0; i < review.rating; i++) { %>
                        ⭐
                    <% } %>
                </h6>
                <p class="card-text"><%= review.comment %></p>
<% if (review.createdAt) { %>
  <p><%= new Date(review.createdAt).toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) %></p>
<% } %>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    <% } %>
</div>


            </div>
        </div>
    </div>
</div>
</body>
</html>