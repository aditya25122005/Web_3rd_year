<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %> 

<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="display-4">Our Products</h1>
    <p class="lead text-muted">Shop With Love</p>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(let item of products){ %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <!-- Product Image -->
          <img src="<%= item.img %>" 
               alt="<%= item.name %>" 
               class="card-img-top" 
               style="object-fit: contain; max-height: 250px; background:#f8f9fa;">

          <!-- Product Body -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text text-muted"><%= item.desc %></p>
            
            <p class="mb-1"><strong>Price:</strong> ₹<%= item.price %></p>
            <p class="mb-1"><strong>Average Rating:</strong> 
              <%= item.avgRating.toFixed(1) %> ⭐
            </p>

            <div class="mt-auto d-flex justify-content-between gap-2">
              <a href="/products/<%= item._id %>" class="btn btn-outline-primary btn-sm flex-fill">View</a>
              <a href="/cart/add/<%= item._id %>" class="btn btn-success btn-sm flex-fill">Add to Cart</a>
            </div>
          </div>

          <!-- Card Footer -->
          <div class="card-footer text-muted text-center">
            Added by: <%= item.author?.username || "Admin" %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<style>
  body {
    background: #ffffff; /* plain white background */
  }
  .card {
    border-radius: 10px;
    transition: transform 0.2s;
  }
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }
  .card-title {
    font-weight: 600;
  }
  .btn-sm {
    font-weight: 500;
  }
</style>
