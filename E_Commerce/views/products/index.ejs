<% layout('layouts/boilerplate') %>

<!-- From partials folder -->
<%- include('../partials/navbar') %>  
<%- include('../partials/flash') %>  
<div class="container mt-4">
  <div class="row">
    <% for (let item of products) { %>
      <div class="col-lg-4 col-md-6 mb-4 d-flex">
        <div class="card flex-fill" style="width: 100%; min-height: 280px;">
          <div class="row g-0 h-100">
            <!-- Image Section -->
            <div class="col-5">
              <img src="<%= item.img %>" 
     class="img-fluid rounded-start h-100 w-100" 
     alt="<%= item.name %>" 
     style="object-fit: contain; background-color: #f8f9fa; min-height: 250px;">
            </div>

            <!-- Content Section -->
            <div class="col-7">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= item.name %></h5>
                <h6 class="text-success">â‚¹<%= item.price %></h6>
                <p class="card-text"><%= item.desc %></p>
                <a href="/products/<%=item._id%>" class="btn btn-info btn-sm mt-auto">View Product</a>
                <p class="card-text mt-2">
                  <small class="text-body-secondary"> <%= item.updatedAt %></small>
                </p>
                <form action="/product/<%= item._id%>?_method=DELETE"  method="POST">
                    <button class="btn btn-sm btn-danger">Delete </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>


</body>
</html>