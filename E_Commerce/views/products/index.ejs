<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">Our Products</h1>
        <p class="lead text-muted fst-italic">Discover high-quality products from our store.</p>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let item of products){ %>
            <div class="col d-flex align-items-stretch">
                <div class="card h-100 shadow-lg border-0 rounded-4 product-card-hover">
                    <div class="card-img-container">
                        <img src="<%= item.img %>" alt="<%= item.name %>" class="card-img-top product-img-fit rounded-top-4">
                    </div>
                    <div class="wishlist-container">
                        <span class="btn like-btn" product-id="<%= item._id %>">
                            <% if(currentUser && currentUser.wishlist && currentUser.wishlist.includes(item._id.toString())) { %>
                                <i class="fa-solid fa-heart" style="color: #ff0000;"></i>
                            <% } else { %>
                                <i class="fa-regular fa-heart" style="color: #ff0000;"></i>
                            <% } %>
                        </span>
                    </div>
                    
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold text-truncate"><%= item.name %></h5>
                        <p class="card-text text-muted mb-3 line-clamp-3"><%= item.desc %></p>
                        <div class="d-flex align-items-center mb-2">
                            <strong class="text-primary fs-5">â‚¹<%= item.price %></strong>
                            <span class="ms-auto">
                                <span class="badge bg-warning text-dark me-1">
                                    <i class="fa-solid fa-star"></i> 
                                    <% if(item.avgRating === 0 || !item.avgRating){ %>
                                        No rating
                                    <%}else{ %>
                                        <%= item.avgRating.toFixed(1) %>
                                    <% }%>
                                </span>
                            </span>
                        </div>
                        <div class="mt-auto d-flex justify-content-between gap-2 pt-3">
                            <a href="/products/<%= item._id %>" class="btn btn-outline-primary flex-fill fw-bold rounded-pill">View Details</a>
                            <form action="/user/<%= item._id %>/buy" method="POST" class="d-inline flex-fill">
                                <button type="submit" class="btn btn-warning flex-fill fw-bold rounded-pill text-dark">Buy Now</button>
                            </form>
                        </div>
                        <% if(currentUser && currentUser.role==='seller' && item.author && item.author.equals(currentUser._id)){ %>
                            <div class="d-flex justify-content-center mt-3 gap-2">
                                <a href="/product/<%=item._id%>/edit" class="btn btn-outline-info btn-sm flex-fill">Edit</a>
                                <form action="/product/<%=item._id%>?_method=DELETE" method="post" class="d-inline flex-fill">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">Delete</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
<%- include('../partials/footer')%>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f2f5;
    }
    .container {
        max-width: 1200px;
    }
    .product-card-hover {
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        cursor: pointer;
    }
    .product-card-hover:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }
    .card-img-container {
        background-color: #ffffff;
        padding: 1.5rem;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid #e9ecef;
    }
    .product-img-fit {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }
    .product-card-hover:hover .product-img-fit {
        transform: scale(1.05);
    }
    .card-title {
        color: #212529;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }
    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }
    .btn-warning {
        background-color: #ffc107;
        color: #212529;
    }
    .btn-warning:hover {
        background-color: #e0a800;
        color: #212529;
    }
    /* New Styles for Wishlist Button */
    .wishlist-container {
        position: absolute;
        top: 15px;
        right: 15px;
        z-index: 10;
    }
    .like-btn {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        padding: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }
    .like-btn:hover {
        background-color: rgba(255, 255, 255, 1);
    }
    .fa-heart, .fa-regular {
        font-size: 1.25rem;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/common.js"></script>